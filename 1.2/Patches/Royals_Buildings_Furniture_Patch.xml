<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[defName="Drape"]</xpath>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Drape"]/stuffCategories</xpath>
        <value>
          <li>Metallic</li>
          <li>Woody</li>
          <li>Stony</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Brazier" or defName="Throne"]/stuffCategories</xpath>
        <value>
          <li>Leathery</li>
          <li>Fabric</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="GrandThrone"]/stuffCategories</xpath>
        <value>
          <li>Leathery</li>
          <li>Fabric</li>
          <li>Woody</li>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>
